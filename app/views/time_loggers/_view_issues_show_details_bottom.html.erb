<% if User.current.allowed_to?(:view_others_time_loggers, nil, :global => true) %>
  <% time_loggers = TimeLogger.where(issue_id: issue.id) %>
  <div class="splitcontent">
    <div class="splitcontentleft">
      <div class="cf_2 attribute">
        <div class="label">
          <span>Таймеры</span>:
        </div>
        <div class="value">
          <% for time_logger in time_loggers %>
            <%= link_to_user user_from_id(time_logger[:user_id]) %> - <%= time_logger.time_spent_to_s %>
            <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
